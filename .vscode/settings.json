{
    "liveServer.settings.port": 5501, // Port pour Live Server
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ], // Activer ESLint pour ces fichiers
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": false // Désactive le formatage par défaut pour éviter les conflits avec ESLint
}